# Colored command output
alias ls="ls --color=auto"
alias grep="grep --color=auto"

# Quick ls options
alias l="ls -lF"
alias la="ls -lFA"
alias lsa="ls -a"

# Quick cwd backtracking
alias ..="cd .."
alias ...="cd ../.."

# Confirm before overwriting
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"
