# Confirm before overwriting
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

# Colored grep output
alias grep="grep --color=auto"

# Colored ls output
alias ls="ls --color=auto"

# Quality of life ls
alias l="ls -lFh"
alias la="ls -lFhA"
alias lsa="ls -a"

# Quality of life vim/nvim
alias v="vim"
alias nv="nvim"
